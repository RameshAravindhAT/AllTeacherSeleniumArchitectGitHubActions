<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite" >
  <listeners>
    <listener class-name="utils.CustomTestListener"/>
  </listeners>
  
  <!-- Test for Chrome -->
  <test name="LoginTest_Chrome" parallel="classes" thread-count="5">
    <parameter name="browser" value="chrome"/>
    <classes>
      <class name="testPackage.TC_001_Login"/>
    </classes>
  </test>

  <!-- Test for Firefox -->
  <test name="LoginTest_Firefox">
    <parameter name="browser" value="firefox"/>
    <classes>
      <class name="testPackage.TC_002_LogOut"/>
    </classes>
  </test>
</suite>
